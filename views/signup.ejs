<!DOCTYPE html>
<html>
    <head>
        <title>My Web Application</title>
        <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css'>
        <style>
            #signupBody {
                background-color: #35393e;
            }

            #signupLabel {
                color: white;
            }

            #createHeading {
                color: white;
            }

            #signupLink {
                color: white;
            }
        </style>
    </head>
    <body>
        <nav class='navbar navbar-expand-lg navbar-dark bg-dark'>
        <a class='navbar-brand' href='/'>Image Gallery Application</a>
        <button class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation'>
            <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarNav'>
            <ul class='navbar-nav'>
                <li class='nav-item'>
                    <a class='nav-link' href='/'>Home</a>
                </li>
                <% if (user) { %>
                    <li class='nav-item'>
                        <a class='nav-link' href='/imageUpload'>Upload</a>
                    </li>
                    <li class='nav-item'>
                        <a class='nav-link' href='/logout'>Logout</a>
                    </li>
                <% } else { %>
                    <li class='nav-item pull-right'>
                        <a class='nav-link' href='/login' >Login</a>
                    </li>
                <% } %>
            </ul>
        </div>
        </nav>
        <div class='container text-center'>
            <h1 class='title'>Sign Up</h1>
            <div class='col-lg-7 mx-auto'>
                <div class='card text-center'>
                    <div class='card-body' id='signupBody'>
                        <h3 class='sub-heading' id='createHeading'>Create Account</h3>
                        <form action='/signup' method='post'>
                            <div class='form-group'>
                                <label for='signupUsername' id='signupLabel'>Username: </label>
                                <input type='text' class='form-control' id='signupUsername' name='username' placeholder='Username...' required>  
                            </div>
                            <div class='row'>
                                <div class='col-md-6'>
                                    <div class='form-group'>
                                        <label for='signupPassword' id='signupLabel'>Password: </label>
                                        <input type='password' class='form-control' id='signupPassword' name='password' data-toggle='password' placeholder='Password...' required>
                                    </div>
                                </div>
                                <div class='col-md-6'>
                                    <div class='form-group'>
                                        <label for='signupConfirm' id='signupLabel'>Confirm Password: </label>
                                        <input type='password' class='form-control' id='signupConfirm' name='passwordCon' data-toggle='password' placeholder='Confirm Password...' required>
                                    </div>
                                </div>
                            </div>
                            <button type='submit' value='submit' class='btn btn-light'>Create Account</button><br>
                            <a class='link' href='/login' id='signupLink'>Have an account? Login!</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <script src='https://code.jquery.com/jquery-3.5.1.slim.min.js'></script>
        <script src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js'></script>
        <script src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js'></script>
    </body>
</html>