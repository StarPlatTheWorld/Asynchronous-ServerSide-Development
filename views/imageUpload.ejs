<!DOCTYPE html>
<html>
    <head>
        <title>My Web Application</title>
        <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css'>
        <style>
            .container {
                width: 45rem;
            }
        </style>
    </head>
    <body>
        <nav class='navbar navbar-expand-lg navbar-dark bg-dark'>
        <a class='navbar-brand' href='/'>Image Gallery Application</a>
        <button class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation'>
            <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarNav'>
            <ul class='navbar-nav'>
                <li class='nav-item'>
                    <a class='nav-link' href='/'>Home</a>
                </li>
                <% if (user) { %>
                    <li class='nav-item'>
                        <a class='nav-link' href='/imageUpload'>Upload</a>
                    </li>
                    <li class='nav-item'>
                        <a class='nav-link' href='/logout'>Logout</a>
                    </li>
                <% } else { %>
                    <li class='nav-item pull-right'>
                        <a class='nav-link' href='/login' >Login</a>
                    </li>
                <% } %>
            </ul>
        </div>
        </nav>
        <div class='container'>
            <h1 id='title' class='text-center'>Upload An Image</h1>
            <form action='/imageUpload' method='post' enctype='multipart/form-data'>
                <div class='card bg-dark ml-5 mr-5'>
                    <div class='card-body'>
                        <input type='file' class='form-control' accept='image/png,image/jpg,image/jpeg' name='upload' required>
                        <br>
                        <input type='text' maxlength='50' name='imgDesc' class='form-control' placeholder='Please type a brief description of the image here' required>
                        <br>
                        <button type='submit' class='btn btn-light btn-sm'>Upload Image</button>
                    </div>
                </div>
            </form>
        </div>
        <script src='https://code.jquery.com/jquery-3.5.1.slim.min.js'></script>
        <script src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js'></script>
        <script src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js'></script>
    </body>
</html>